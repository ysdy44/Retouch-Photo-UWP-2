<Application
    x:Class="Retouch_Photo2.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >

    <Application.Resources>
        <ResourceDictionary>

            <!--Theme-->
            <!--           
                AppForeground: Foreground Color,
                AppBackground: Background Color,
                AppBorderBrush: Border Color,
            
                AppFill: Panel Color,
                AppStroke: Shadow Color,
                AppText: Text Color,
                AppLinearBrush: Linear Brush,
            -->
            <ResourceDictionary.ThemeDictionaries>

                <ResourceDictionary x:Key="Light">

                    <Color x:Key="AppForegroundColor" >#F8F8F8</Color>
                    <Color x:Key="AppBackgroundColor" >#F0F0F2</Color>
                    <Color x:Key="AppBorderBrushColor" >#BEBCC7</Color>

                    <Color x:Key="AppFillColor" >#FFFFFF</Color>
                    <Color x:Key="AppStrokeColor" >#66817F91</Color>
                    <Color x:Key="AppTextColor" >#99000000</Color>

                    <LinearGradientBrush x:Key="AppLinearBrush" StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#f7f7f7" Offset="0.25"/>
                        <GradientStop Color="#f5f5f5" Offset="0.5"/>
                        <GradientStop Color="#EEEEEE" Offset="0.75"/>
                        <GradientStop Color="#E0E0E0" Offset="1"/>
                    </LinearGradientBrush>
                    
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">

                    <Color x:Key="AppForegroundColor" >#222222</Color>
                    <Color x:Key="AppBackgroundColor" >#0E0E0E</Color>
                    <Color x:Key="AppBorderBrushColor" >#303030</Color>

                    <Color x:Key="AppFillColor" >#161616</Color>
                    <Color x:Key="AppStrokeColor" >#AA050005</Color>
                    <Color x:Key="AppTextColor" >#BBFFFFFF</Color>

                    <LinearGradientBrush x:Key="AppLinearBrush" StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#111111" Offset="0"/>
                        <GradientStop Color="#101010" Offset="0.25"/>
                        <GradientStop Color="#0F0F0F" Offset="0.5"/>
                        <GradientStop Color="#0E0E0E" Offset="0.75"/>
                        <GradientStop Color="#030303" Offset="1"/>
                    </LinearGradientBrush>
                    
                </ResourceDictionary>

            </ResourceDictionary.ThemeDictionaries>

            
            <!--Merged-->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Style/Style.xaml"/>
                <ResourceDictionary Source="ms-appx:///Style/Style.Button.xaml"/>
                <ResourceDictionary Source="ms-appx:///Style/Template.xaml"/>

                <!--Version-->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls"/>

            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>

</Application>

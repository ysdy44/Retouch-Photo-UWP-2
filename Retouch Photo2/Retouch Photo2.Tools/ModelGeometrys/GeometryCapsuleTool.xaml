<Page
    x:Class="Retouch_Photo2.Tools.Models.GeometryCapsulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolsElements="using:Retouch_Photo2.Tools.Elements"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400"
    >

    <StackPanel Orientation="Horizontal">
        <ContentControl Width="8"/>

        <TextBlock Text="{x:Bind ConvertButton.Title}" Style="{StaticResource AppTextBlockStyle}"/>
        <toolsElements:ConvertToCurvesButton x:Name="ConvertButton"/>

        <ContentControl Width="4"/>

        <toolsElements:MoreCreateButton/>

        <ContentControl Width="4"/>
    </StackPanel>
    
</Page>
<Page
    x:Class="Retouch_Photo2.Tools.Models.GeometryArrowTool"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:hSVColorPickers="using:HSVColorPickers"
    xmlns:tools="using:Retouch_Photo2.Tools"
    xmlns:toolsElements="using:Retouch_Photo2.Tools.Elements"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400"
    d:RequestedTheme="Dark"
    d:Background="{StaticResource AppForeground}"
    >

    <ScrollViewer Style="{StaticResource AppHorizontalScrollViewerStyle}">
        <StackPanel Orientation="Horizontal">

            <Border Width="50" Visibility="{x:Bind DeviceLayoutTypeConverter(SettingViewModel.DeviceLayoutType), Mode=OneWay}">
                <Border.Resources>
                    <ResourceDictionary Source="ms-appx:///Retouch Photo2.Tools/IconGeometrys/GeometryArrowIcon.xaml"/>
                </Border.Resources>
                <Border.Child>
                    <ContentControl x:Name="IconContentControl" HorizontalAlignment="Center" VerticalAlignment="Center" Template="{StaticResource GeometryArrowIcon}"/>
                </Border.Child>
            </Border>

            <Rectangle Style="{StaticResource AppSeparatorRectangleHorizontalStyle}"/>

            <!--Value-->
            <TextBlock x:Name="ValueTextBlock" Style="{StaticResource AppTextBlockStyle}"/>
            <tools:TouchbarButton x:Name="ValueButton" 
                              Content="{x:Bind ValueToNumberConverter(SelectionViewModel.GeometryArrow_Value), Mode=OneWay}">
                <tools:TouchbarButton.Picker>
                    <hSVColorPickers:NumberPicker x:Name="ValuePicker" ButtonStyle="{StaticResource AppNumberTouchbarButtonStyle}" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"
                          Value="{x:Bind ValueToNumberConverter(SelectionViewModel.GeometryArrow_Value), Mode=OneWay}"/>
                </tools:TouchbarButton.Picker>
                <tools:TouchbarButton.Slider>
                    <tools:TouchbarSlider x:Name="ValueSlider"
                          Value="{x:Bind SelectionViewModel.GeometryArrow_Value, Mode=OneWay}" />
                </tools:TouchbarButton.Slider>
            </tools:TouchbarButton>

            <!--LeftTail-->
            <TextBlock x:Name="LeftTailTextBlock"  Style="{StaticResource AppTextBlockStyle}"/>
            <toolsElements:ArrowTailTypeComboBox x:Name="LeftTailComboBox"
                 ArrowTailType="{x:Bind SelectionViewModel.GeometryArrow_LeftTail, Mode=OneWay}" />

            <!--RightTail-->
            <TextBlock x:Name="RightTailTextBlock" Style="{StaticResource AppTextBlockStyle}"/>
            <toolsElements:ArrowTailTypeComboBox x:Name="RightTailComboBox" 
                 ArrowTailType="{x:Bind SelectionViewModel.GeometryArrow_RightTail, Mode=OneWay}"/>

            <Rectangle Style="{StaticResource AppSeparatorRectangleHorizontalStyle}"/>

            <Button x:Name="ConvertToCurvesButton" Style="{StaticResource AppRoundedButtonStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip x:Name="ConvertToCurvesToolTip" Placement="Top" IsOpen="{x:Bind IsOpen, Mode=OneWay}" Style="{StaticResource AppToolTipStyle}"/>
                </ToolTipService.ToolTip>
                <Button.Resources>
                    <ResourceDictionary Source="ms-appx:///Retouch Photo2.Tools/Elements/ConvertToCurvesIcon.xaml"/>
                </Button.Resources>
                <ContentControl Template="{StaticResource ConvertToCurvesIcon}"/>
            </Button>

            <Rectangle Style="{StaticResource AppSeparatorRectangleHorizontalStyle}"/>

            <Button x:Name="MoreButton" Grid.Column="6" Width="50" Style="{StaticResource AppRoundedButtonStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip x:Name="MoreCreateToolTip" Placement="Top" IsOpen="{x:Bind IsOpen, Mode=OneWay}" Style="{StaticResource AppToolTipStyle}"/>
                </ToolTipService.ToolTip>
                <FontIcon Glyph="&#xE10C;" FontWeight="Bold" FontFamily="Segoe UI Symbol"/>
            </Button>

        </StackPanel>
    </ScrollViewer>
</Page>
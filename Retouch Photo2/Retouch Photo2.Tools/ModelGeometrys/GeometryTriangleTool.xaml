<Page
    x:Class="Retouch_Photo2.Tools.Models.GeometryTrianglePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:hSVColorPickers="using:HSVColorPickers"
    xmlns:tools="using:Retouch_Photo2.Tools"
    xmlns:toolsElements="using:Retouch_Photo2.Tools.Elements"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400"
    d:RequestedTheme="Dark"
    d:Background="{StaticResource AppForeground}"
    >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Border Width="50">
            <Border.Resources>
                <ResourceDictionary Source="ms-appx:///Retouch Photo2.Tools/IconGeometrys/GeometryTriangleIcon.xaml"/>
            </Border.Resources>
            <Border.Child>
                <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center" Template="{StaticResource GeometryTriangleIcon}"/>
            </Border.Child>
        </Border>
        
        <Rectangle Grid.Column="1" Style="{StaticResource AppSeparatorRectangleHorizontalStyle}"/>

        <!--Center-->
        <TextBlock x:Name="CenterTextBlock" Grid.Column="2" Style="{StaticResource AppTextBlockStyle}"/>
        <tools:TouchbarButton x:Name="CenterButton" Grid.Column="3"
                            Content="{x:Bind CenterToNumberConverter(SelectionViewModel.GeometryTriangle_Center), Mode=OneWay}">
            <tools:TouchbarButton.Picker>
                <hSVColorPickers:NumberPicker x:Name="CenterPicker" ButtonStyle="{StaticResource AppNumberTouchbarButtonStyle}" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"
                            Value="{x:Bind CenterToNumberConverter(SelectionViewModel.GeometryTriangle_Center), Mode=OneWay}"/>
            </tools:TouchbarButton.Picker>
            <tools:TouchbarButton.Slider>
                <tools:TouchbarSlider x:Name="CenterSlider" 
                            Value="{x:Bind SelectionViewModel.GeometryTriangle_Center, Mode=OneWay}"/>
            </tools:TouchbarButton.Slider>
        </tools:TouchbarButton>

        <Rectangle Grid.Column="4" Style="{StaticResource AppSeparatorRectangleHorizontalStyle}"/>

        <!--Mirror-->
        <TextBlock x:Name="MirrorTextBlock" Grid.Column="5" Style="{StaticResource AppTextBlockStyle}"/>
        <Button x:Name="MirrorButton" Grid.Column="6" Style="{StaticResource AppRoundedButtonStyle}">
            <FontIcon Glyph="&#xF1CB;" FontWeight="Bold" FontFamily="Segoe MDL2 Assets"/>
        </Button>

        <Rectangle Grid.Column="7" Style="{StaticResource AppSeparatorRectangleHorizontalStyle}"/>

        <toolsElements:ConvertToCurvesButton x:Name="ConvertButton" Grid.Column="8"/>

        <Rectangle Grid.Column="9" Style="{StaticResource AppSeparatorRectangleHorizontalStyle}"/>

        <toolsElements:MoreCreateButton Grid.Column="10"/>

    </Grid>
</Page>
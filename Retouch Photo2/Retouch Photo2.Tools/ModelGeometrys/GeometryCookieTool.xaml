<Page
    x:Class="Retouch_Photo2.Tools.Models.GeometryCookiePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:hSVColorPickers="using:HSVColorPickers"
    xmlns:tools="using:Retouch_Photo2.Tools"
    xmlns:toolsElements="using:Retouch_Photo2.Tools.Elements"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400"
    d:RequestedTheme="Dark"
    d:Background="{StaticResource AppForeground}"
    >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Border Width="50">
            <Border.Resources>
                <ResourceDictionary Source="ms-appx:///Retouch Photo2.Tools/IconGeometrys/GeometryCookieIcon.xaml"/>
            </Border.Resources>
            <Border.Child>
                <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center" Template="{StaticResource GeometryCookieIcon}"/>
            </Border.Child>
        </Border>
        
        <Rectangle Grid.Column="1" Style="{StaticResource AppSeparatorRectangleHorizontalStyle}"/>

        <!--InnerRadius-->
        <TextBlock x:Name="InnerRadiusTextBlock" Grid.Column="2" Style="{StaticResource AppTextBlockStyle}"/>
        <tools:TouchbarButton x:Name="InnerRadiusButton" Grid.Column="3"
                              Content="{x:Bind InnerRadiusToNumberConverter(SelectionViewModel.GeometryCookie_InnerRadius), Mode=OneWay}">
        <tools:TouchbarButton.Picker>
                <hSVColorPickers:NumberPicker x:Name="InnerRadiusPicker" ButtonStyle="{StaticResource AppNumberTouchbarButtonStyle}" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"
                             Value="{x:Bind InnerRadiusToNumberConverter(SelectionViewModel.GeometryCookie_InnerRadius), Mode=OneWay}"/>
            </tools:TouchbarButton.Picker>
            <tools:TouchbarButton.Slider>
                <tools:TouchbarSlider x:Name="InnerRadiusSlider"
                             Value="{x:Bind SelectionViewModel.GeometryCookie_InnerRadius, Mode=OneWay}" />
            </tools:TouchbarButton.Slider>
        </tools:TouchbarButton>

        <!--SweepAngle-->
        <TextBlock x:Name="SweepAngleTextBlock" Grid.Column="4" Style="{StaticResource AppTextBlockStyle}"/>
        <tools:TouchbarButton x:Name="SweepAngleButton" Grid.Column="5"
                              Content="{x:Bind SweepAngleToNumberConverter(SelectionViewModel.GeometryCookie_SweepAngle), Mode=OneWay}">
        <tools:TouchbarButton.Picker>
                <hSVColorPickers:NumberPicker x:Name="SweepAnglePicker" ButtonStyle="{StaticResource AppNumberTouchbarButtonStyle}" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"
                             Value="{x:Bind SweepAngleToNumberConverter(SelectionViewModel.GeometryCookie_SweepAngle), Mode=OneWay}"/>
            </tools:TouchbarButton.Picker>
            <tools:TouchbarButton.Slider>
                <tools:TouchbarSlider x:Name="SweepAngleSlider"
                             Value="{x:Bind SelectionViewModel.GeometryCookie_SweepAngle, Mode=OneWay}" />
            </tools:TouchbarButton.Slider>
        </tools:TouchbarButton>

        <Rectangle Grid.Column="6" Style="{StaticResource AppSeparatorRectangleHorizontalStyle}"/>

        <toolsElements:ConvertToCurvesButton x:Name="ConvertButton" Grid.Column="7"/>

        <Rectangle Grid.Column="8" Style="{StaticResource AppSeparatorRectangleHorizontalStyle}"/>

        <Button x:Name="MoreCreateButton" Grid.Column="9" Width="50" Style="{StaticResource AppRoundedButtonStyle}">
            <FontIcon Glyph="&#xE10C;" FontWeight="Bold" FontFamily="Segoe UI Symbol"/>
        </Button>

    </Grid>
</Page>
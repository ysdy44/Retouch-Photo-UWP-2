<UserControl
    x:Class="Retouch_Photo2.Menus.StyleMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:styles="using:Retouch_Photo2.Styles"
    mc:Ignorable="d"
    d:DesignWidth="200"
    d:DesignHeight="400"
    >

    <UserControl.Resources>
        <!--Flyout-->
        <Flyout x:Name="StyleCategoryNamesFlyout" Placement="Bottom" LightDismissOverlayMode="{StaticResource AppLightDismissOverlayMode}" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
            <ListView x:Name="StyleCategoryNamesListView" IsItemClickEnabled="True" SelectionMode="Single"
                       ItemsSource="{x:Bind StyleCategoryNames}"/>
        </Flyout>
    </UserControl.Resources>


    <GridView x:Name="GridView" SelectionMode="None" IsItemClickEnabled="True"
              ItemsSource="{x:Bind Styles}">


        <!--VisualState-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">

                <!--Normal-->
                <VisualState x:Name="Normal"/>

                <!--Writable-->
                <VisualState x:Name="Writable">
                    <VisualState.Setters>
                        <Setter Target = "GridView.SelectionMode" Value="Multiple"/>
                        <Setter Target = "GridView.IsItemClickEnabled" Value="False"/>

                        <Setter Target = "StyleCategoryNamesButton.Visibility" Value="Collapsed"/>
                        
                        <Setter Target = "AddButton.Visibility" Value="Collapsed"/>
                        <Setter Target = "WritableButton.Visibility" Value="Collapsed"/>
                        <Setter Target = "WritableOKButton.Visibility" Value="Visible"/>
                        <Setter Target = "WritableCancelButton.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>


        <GridView.ItemContainerStyle>
            <Style TargetType="GridViewItem">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Width" Value="74"/>
                <Setter Property="Height" Value="74"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>
        </GridView.ItemContainerStyle>

        <GridView.ItemTemplate>
            <DataTemplate x:DataType="styles:Style">
                <styles:StyleShowControl Style2="{x:Bind}" HorizontalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind Name}"/>
                    </ToolTipService.ToolTip>
                </styles:StyleShowControl>
            </DataTemplate>
        </GridView.ItemTemplate>

        <GridView.Header>
            <Grid MinHeight="{StaticResource AppTitleHeight}" Grid.Row="0" Padding="{StaticResource AppPanelPadding}" ManipulationMode="TranslateX,TranslateY" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ListViewItem x:Name="StyleCategoryNamesButton" HorizontalContentAlignment="Stretch" Style="{StaticResource AppListViewItemStyle}">
                    <ContentControl Style="{StaticResource AppIconReverseContentControlStyle}"
                          Content="{x:Bind StyleCategoryNamesListView.SelectedItem, Mode=OneWay}">
                        <ContentControl.Tag>
                            <FontIcon Glyph="&#xE09B;" FontSize="14" FontWeight="Bold" FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                          MirroredWhenRightToLeft="True"/>
                        </ContentControl.Tag>
                    </ContentControl>
                </ListViewItem>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Padding="4,0">
                    <ListViewItem x:Name="AddButton" Style="{StaticResource AppListViewItemStyle}">
                        <SymbolIcon Symbol="Add"/>
                    </ListViewItem >
                    <ListViewItem x:Name="WritableButton" Style="{StaticResource AppListViewItemStyle}">
                        <SymbolIcon Symbol="ShowBcc"/>
                    </ListViewItem >
                    <ListViewItem x:Name="WritableOKButton" Visibility="Collapsed" Style="{StaticResource AppListViewItemStyle}">
                        <SymbolIcon Symbol="Delete"/>
                    </ListViewItem>
                    <ListViewItem x:Name="WritableCancelButton" Visibility="Collapsed" Style="{StaticResource AppListViewItemStyle}">
                        <SymbolIcon Symbol="Cancel"/>
                    </ListViewItem>
                </StackPanel>
            </Grid>
        </GridView.Header>

    </GridView>

</UserControl>
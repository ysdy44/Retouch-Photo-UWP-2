<UserControl
    x:Class="Retouch_Photo2.Menus.Models.EditMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="200"
    d:DesignHeight="400"
    >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">

            <!--Edit-->
            <TextBlock x:Name="EditTextBlock" Style="{StaticResource AppTextBlockStyle}"/>
            <Button x:Name="Cut" IsEnabled="{x:Bind SelectionViewModel.SelectionUnNone, Mode=OneWay}" Style="{StaticResource AppIconButton}"/>
            <Button x:Name="Duplicate" IsEnabled="{x:Bind SelectionViewModel.SelectionUnNone, Mode=OneWay}" Style="{StaticResource AppIconButton}"/>
            <Button x:Name="Copy" IsEnabled="{x:Bind SelectionViewModel.SelectionUnNone, Mode=OneWay}" Style="{StaticResource AppIconButton}"/>
            <Button x:Name="Paste" IsEnabled="{x:Bind MethodViewModel.ClipboardEnable, Mode=OneWay}" Style="{StaticResource AppIconButton}"/>
            <Rectangle Style="{ThemeResource AppSeparatorRectangleVerticalStyle}" />
            <Button x:Name="Clear" IsEnabled="{x:Bind SelectionViewModel.SelectionUnNone, Mode=OneWay}" Style="{StaticResource AppIconButton}"/>

            <Rectangle Style="{ThemeResource AppSeparatorRectangleVerticalStyle}" />

            <!--Group-->
            <TextBlock x:Name="GroupTextBlock" Style="{StaticResource AppTextBlockStyle}"/>
            <Button x:Name="Group" IsEnabled="{x:Bind SelectionViewModel.SelectionUnNone, Mode=OneWay}" Style="{StaticResource AppIconButton}"/>
            <Button x:Name="Ungroup" IsEnabled="{x:Bind SelectionViewModel.IsGroupLayer, Mode=OneWay}" Style="{StaticResource AppIconButton}"/>
            <Rectangle Style="{ThemeResource AppSeparatorRectangleVerticalStyle}" />
            <Button x:Name="Release" IsEnabled="{x:Bind SelectionViewModel.SelectionUnNone, Mode=OneWay}" Style="{StaticResource AppIconButton}"/>

        </StackPanel>

        <Rectangle Grid.Column="1" Margin="0" Style="{ThemeResource AppSeparatorRectangleHorizontalStyle}" />

        <StackPanel Grid.Column="2">

            <!--Select-->
            <TextBlock x:Name="SelectTextBlock" Style="{StaticResource AppTextBlockStyle}"/>
            <Button x:Name="All" IsEnabled="True" Style="{StaticResource AppIconButton}"/>
            <Button x:Name="Deselect" IsEnabled="True" Style="{StaticResource AppIconButton}"/>
            <Rectangle Style="{ThemeResource AppSeparatorRectangleVerticalStyle}" />
            <Button x:Name="Invert" IsEnabled="True" Style="{StaticResource AppIconButton}"/>

            <Rectangle Style="{ThemeResource AppSeparatorRectangleVerticalStyle}" />

            <!--Combine-->
            <TextBlock x:Name="CombineTextBlock" Style="{StaticResource AppTextBlockStyle}"/>
            <Button x:Name="Union" IsEnabled="{x:Bind SelectionViewModel.SelectionMultiple, Mode=OneWay}" Style="{StaticResource AppIconButton}"/>
            <Button x:Name="Exclude" IsEnabled="{x:Bind SelectionViewModel.SelectionMultiple, Mode=OneWay}" Style="{StaticResource AppIconButton}"/>
            <Button x:Name="Xor" IsEnabled="{x:Bind SelectionViewModel.SelectionMultiple, Mode=OneWay}" Style="{StaticResource AppIconButton}"/>
            <Button x:Name="Intersect" IsEnabled="{x:Bind SelectionViewModel.SelectionMultiple, Mode=OneWay}" Style="{StaticResource AppIconButton}"/>
            <Rectangle Style="{ThemeResource AppSeparatorRectangleVerticalStyle}" />
            <Button x:Name="ExpandStroke" IsEnabled="{x:Bind SelectionViewModel.SelectionUnNone, Mode=OneWay}" Style="{StaticResource AppIconButton}"/>

        </StackPanel>

    </Grid>

</UserControl>
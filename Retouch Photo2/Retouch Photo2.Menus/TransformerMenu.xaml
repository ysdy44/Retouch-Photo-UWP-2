<UserControl
    x:Class="Retouch_Photo2.Menus.TransformerMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:transformers="using:FanKit.Transformers"
    xmlns:hsvColorpickers="using:HSVColorPickers"
    mc:Ignorable="d"
    d:DesignWidth="200"
    d:DesignHeight="400"
    >


    <UserControl.Resources>
        <!--SolidColorBrush-->
        <SolidColorBrush x:Name="RemoteBackground" Color="{ThemeResource AppForegroundColor}"/>
        <SolidColorBrush x:Name="RemoteBorderBrush" Color="{ThemeResource AppBorderBrushColor}"/>
        <SolidColorBrush x:Name="RemoteForeground" Color="{ThemeResource AppTextColor}"/>
    </UserControl.Resources>


    <SplitView x:Name="SplitView"
               DisplayMode="Inline" 
               OpenPaneLength="200" 
               PanePlacement="Left"
               IsPaneOpen="True"
               PaneBackground="Transparent"
               >

        <SplitView.Pane>
            <ScrollViewer Style="{StaticResource AppVerticalScrollViewerStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="46"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>


                    <!--Width-->
                    <TextBlock x:Name="WidthTextBlock" Grid.Column="0" Grid.Row="0" Style="{StaticResource AppTextBlockStyle}"/>
                    <hsvColorpickers:NumberPicker x:Name="WPicker" Grid.Column="0" Grid.Row="1" Width="Auto" Unit="px" ButtonStyle="{StaticResource AppNumberBoldButtonStyle}" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"/>

                    <!--Height-->
                    <TextBlock x:Name="HeightTextBlock" Grid.Column="2" Grid.Row="0" Style="{StaticResource AppTextBlockStyle}"/>
                    <hsvColorpickers:NumberPicker x:Name="HPicker" Grid.Column="2" Grid.Row="1" Width="Auto" Unit="px" ButtonStyle="{StaticResource AppNumberBoldButtonStyle}" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"/>

                    <!--Ratio-->
                    <ToggleButton x:Name="RatioToggleControl" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Style="{StaticResource AppCircleToggleButtonStyle}"
                              IsChecked="{x:Bind SettingViewModel.IsRatio, Mode=TwoWay}" >
                        <ToolTipService.ToolTip>
                            <ToolTip x:Name="RatioToolTip" Placement="Top" IsOpen="{x:Bind IsOpen, Mode=OneWay}" Style="{StaticResource AppToolTipStyle}"/>
                        </ToolTipService.ToolTip>
                        <FontIcon Glyph="&#x1F512;" FontSize="18" FontWeight="Bold" FontFamily="Segoe UI Symbol"/>
                    </ToggleButton>



                    <!--Rotate-->
                    <TextBlock x:Name="RotateTextBlock" Grid.Column="0" Grid.Row="2" Style="{StaticResource AppTextBlockStyle}"/>
                    <hsvColorpickers:NumberPicker x:Name="RPicker" Grid.Column="0" Grid.Row="3" Width="Auto" Unit="px" ButtonStyle="{StaticResource AppNumberBoldButtonStyle}" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"/>

                    <!--Skew-->
                    <TextBlock x:Name="SkewTextBlock" Grid.Column="2" Grid.Row="2" Style="{StaticResource AppTextBlockStyle}"/>
                    <hsvColorpickers:NumberPicker x:Name="SPicker" Grid.Column="2" Grid.Row="3" Width="Auto" Unit="px" ButtonStyle="{StaticResource AppNumberBoldButtonStyle}" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"/>

                    <!--SnapToTick-->
                    <ToggleButton x:Name="SnapToTickButton" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center" Style="{StaticResource AppCircleToggleButtonStyle}"
                                  IsChecked="{x:Bind SettingViewModel.IsSnapToTick, Mode=TwoWay}">
                        <ToolTipService.ToolTip>
                            <ToolTip x:Name="SnapToTickToolTip" Placement="Top" IsOpen="{x:Bind IsOpen, Mode=OneWay}" Style="{StaticResource AppToolTipStyle}"/>
                        </ToolTipService.ToolTip>
                        <ToggleButton.Resources>
                            <ResourceDictionary Source="ms-appx:///Retouch Photo2.Tools/Elements/SnapToTickIcon.xaml"/>
                        </ToggleButton.Resources>
                        <ContentControl Template="{StaticResource SnapToTickIcon}"/>
                    </ToggleButton>



                    <!--X-->
                    <TextBlock x:Name="XTextBlock" Grid.Column="0" Grid.Row="4" Style="{StaticResource AppTextBlockStyle}"/>
                    <hsvColorpickers:NumberPicker x:Name="XPicker" Grid.Column="0" Grid.Row="5" Width="Auto" Unit="px" ButtonStyle="{StaticResource AppNumberBoldButtonStyle}" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"/>

                    <!--Y-->
                    <TextBlock x:Name="YTextBlock" Grid.Column="2" Grid.Row="4" Style="{StaticResource AppTextBlockStyle}"/>
                    <hsvColorpickers:NumberPicker x:Name="YPicker" Grid.Column="2" Grid.Row="5" Width="Auto" Unit="px" ButtonStyle="{StaticResource AppNumberBoldButtonStyle}" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"/>

                    <!--RemoteButton-->
                    <Button x:Name="PositionRemoteButton" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Center" Style="{StaticResource AppCircleButtonStyle}">
                        <ToolTipService.ToolTip>
                            <ToolTip x:Name="PositionRemoteToolTip" Placement="Top" IsOpen="{x:Bind IsOpen, Mode=OneWay}" Style="{StaticResource AppToolTipStyle}"/>
                        </ToolTipService.ToolTip>
                        <FontIcon FontSize="14" Glyph="&#xE970;" FontWeight="Bold" FontFamily="{ThemeResource SymbolThemeFontFamily}"
                      MirroredWhenRightToLeft="True"/>
                    </Button>


                    <!--IndicatorControl-->
                    <transformers:IndicatorControl x:Name="IndicatorControl" Grid.ColumnSpan="3" Grid.Row="6" Background="{ThemeResource AppBackground}" BorderBrush="{ThemeResource AppBorderBrush}"
                                       FlowDirection="LeftToRight">
                        <ToolTipService.ToolTip>
                            <ToolTip x:Name="IndicatorToolTip" Placement="Top" IsOpen="{x:Bind IsOpen, Mode=OneWay}" Style="{StaticResource AppToolTipStyle}"/>
                        </ToolTipService.ToolTip>
                    </transformers:IndicatorControl>


                </Grid>
            </ScrollViewer>
        </SplitView.Pane>

        <SplitView.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <transformers:RemoteControl x:Name="PositionRemoteControl" Width="Auto" Height="Auto" Margin="4"
                                        FlowDirection="LeftToRight"/>
                <ListViewItem x:Name="CloseButton" Grid.Row="2" Style="{StaticResource AppListViewItemStyle}"/>
            </Grid>
        </SplitView.Content>
    </SplitView>

</UserControl>
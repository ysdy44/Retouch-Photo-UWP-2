            <ListViewItem x:Name="Vignette">
                <ContentControl Style="{StaticResource AppIconContentControlStyle}">
                    <ContentControl.Resources>
                        <ResourceDictionary Source="ms-appx:///Retouch Photo2.Adjustments/Icons/VignetteIcon.xaml"/>
                    </ContentControl.Resources>
                    <ContentControl.Tag>
                        <ContentControl Template="{StaticResource VignetteIcon}"/>
                    </ContentControl.Tag>
                </ContentControl>
            </ListViewItem>

        </ListView.Items>
    </ListView>

</UserControl>    
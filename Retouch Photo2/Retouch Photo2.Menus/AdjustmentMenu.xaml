                    </ContentControl.Tag>
                </ContentControl>
            </ListViewItem>

            <ListViewItem x:Name="Temperature">
                <ContentControl Style="{StaticResource AppIconContentControlStyle}">
                    <ContentControl.Resources>
                        <ResourceDictionary Source="ms-appx:///Retouch Photo2.Adjustments/Icons/TemperatureIcon.xaml"/>

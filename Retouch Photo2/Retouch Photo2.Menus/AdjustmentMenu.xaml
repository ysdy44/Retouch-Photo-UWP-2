<UserControl
    x:Class="Retouch_Photo2.Menus.AdjustmentMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="200"
    d:DesignHeight="400"
    IsEnabled="False"
    >

    <ListView x:Name="ListView" IsItemClickEnabled="True" SelectionMode="None">
        <ListView.Items>

            <ListViewItem x:Name="Gray">
                <ContentControl Style="{StaticResource AppIconContentControlStyle}">
                    <ContentControl.Resources>
                        <ResourceDictionary Source="ms-appx:///Retouch Photo2.Adjustments/Icons/GrayIcon.xaml"/>
                    </ContentControl.Resources>
                    <ContentControl.Tag>
                        <ContentControl Template="{StaticResource GrayIcon}"/>
                    </ContentControl.Tag>
                </ContentControl>
            </ListViewItem>

            <ListViewItem x:Name="Invert">
                <ContentControl Style="{StaticResource AppIconContentControlStyle}">
                    <ContentControl.Resources>
                        <ResourceDictionary Source="ms-appx:///Retouch Photo2.Adjustments/Icons/InvertIcon.xaml"/>
                    </ContentControl.Resources>
                    <ContentControl.Tag>
                        <ContentControl Template="{StaticResource InvertIcon}"/>
                    </ContentControl.Tag>
                </ContentControl>
            </ListViewItem>

            <ListViewItem Style="{StaticResource AppSeparatorListViewItemStyle}"/>

            <ListViewItem x:Name="Exposure">
                <ContentControl Style="{StaticResource AppIconContentControlStyle}">
                    <ContentControl.Resources>
                        <ResourceDictionary Source="ms-appx:///Retouch Photo2.Adjustments/Icons/ExposureIcon.xaml"/>
                    </ContentControl.Resources>
                    <ContentControl.Tag>
                        <ContentControl Template="{StaticResource ExposureIcon}"/>
                    </ContentControl.Tag>
                </ContentControl>
            </ListViewItem>

            <ListViewItem x:Name="Brightness">

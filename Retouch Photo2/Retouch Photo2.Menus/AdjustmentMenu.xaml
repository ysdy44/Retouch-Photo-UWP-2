                    </ContentControl.Tag>
                </ContentControl>
            </ListViewItem>

            <ListViewItem Style="{StaticResource AppSeparatorListViewItemStyle}"/>

            <ListViewItem x:Name="Saturation">
                <ContentControl Style="{StaticResource AppIconContentControlStyle}">
                    <ContentControl.Resources>
                        <ResourceDictionary Source="ms-appx:///Retouch Photo2.Adjustments/Icons/SaturationIcon.xaml"/>
                    </ContentControl.Resources>
                    <ContentControl.Tag>
                        <ContentControl Template="{StaticResource SaturationIcon}"/>
                    </ContentControl.Tag>
                </ContentControl>
            </ListViewItem>

            <ListViewItem x:Name="HueRotation">

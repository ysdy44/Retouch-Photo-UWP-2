<UserControl
    x:Class="Retouch_Photo2.Menus.TextMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:hsvColorpickers="using:HSVColorPickers"
    xmlns:texts="using:Retouch_Photo2.Texts"
    mc:Ignorable="d"
    d:DesignWidth="200"
    d:DesignHeight="400"
    >


    <SplitView x:Name="SplitView"
               DisplayMode="Inline" 
               OpenPaneLength="200" 
               PanePlacement="Left"
               IsPaneOpen="True"
               PaneBackground="Transparent"
               >

        <SplitView.Pane>
            <ScrollViewer Style="{StaticResource AppVerticalScrollViewerStyle}">
                <StackPanel>


                    <!--Alignment-->
                    <TextBlock x:Name="AlignmentTextBlock" Style="{StaticResource AppTextBlockStyle}"/>
                    <texts:HorizontalAlignmentSegmented x:Name="HorizontalAlignmentSegmented" IsOpen="{x:Bind IsOpen, Mode=OneWay}" HorizontalAlignment2="{x:Bind SelectionViewModel.HorizontalAlignment, Mode=OneWay}"/>


                    <!--FontStyle-->
                    <TextBlock x:Name="FontStyleTextBlock" Style="{StaticResource AppTextBlockStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <ToggleButton x:Name="BoldButton" Grid.Column="0" Style="{StaticResource AppCircleToggleButtonStyle}"
                                      IsChecked="{x:Bind FontWeightConverter(SelectionViewModel.FontWeight), Mode=OneWay}">
                            <ToolTipService.ToolTip>
                                <ToolTip x:Name="BoldToolTip" Placement="Top" IsOpen="{x:Bind IsOpen, Mode=OneWay}" Style="{StaticResource AppToolTipStyle}"/>
                            </ToolTipService.ToolTip>
                            <SymbolIcon Symbol="Bold"/>
                        </ToggleButton>

                        <ToggleButton x:Name="ItalicButton" Grid.Column="1" Style="{StaticResource AppCircleToggleButtonStyle}"
                                      IsChecked="{x:Bind FontStyleConverter(SelectionViewModel.FontStyle), Mode=OneWay}">
                            <ToolTipService.ToolTip>
                                <ToolTip x:Name="ItalicToolTip" Placement="Top" IsOpen="{x:Bind IsOpen, Mode=OneWay}" Style="{StaticResource AppToolTipStyle}"/>
                            </ToolTipService.ToolTip>
                            <SymbolIcon Symbol="Italic"/>
                        </ToggleButton>

                        <Button x:Name="UnderLineButton" Visibility="Collapsed" IsEnabled="False" Grid.Column="2" Style="{StaticResource AppRoundedButtonRightStyle}">
                            <ToolTipService.ToolTip>
                                <ToolTip x:Name="UnderLineToolTip" Placement="Top" IsOpen="{x:Bind IsOpen, Mode=OneWay}" Style="{StaticResource AppToolTipStyle}"/>
                            </ToolTipService.ToolTip>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE19A;" FontSize="18" FontWeight="Bold" />
                        </Button>

                    </Grid>


                    <!--FontWeight-->
                    <TextBlock x:Name="FontWeightTextBlock" Style="{StaticResource AppTextBlockStyle}"/>
                    <texts:FontWeightComboBox x:Name="FontWeightComboBox"
                       Weight ="{x:Bind SelectionViewModel.FontWeight, Mode=OneWay}">
                    </texts:FontWeightComboBox>


                    <!--FontFamily-->
                    <TextBlock x:Name="FontFamilyTextBlock" Style="{StaticResource AppTextBlockStyle}"/>
                    <Button x:Name="FontFamilyButton" HorizontalContentAlignment="Stretch" Style="{StaticResource AppRoundedButtonStyle}">
                        <ContentControl Style="{StaticResource AppIconReverseContentControlStyle}"
                                        Content="{x:Bind SelectionViewModel.FontFamily, Mode=OneWay}">
                            <ContentControl.Tag>
                                <FontIcon Glyph="&#xE09B;" FontSize="14" FontWeight="Bold" FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                          MirroredWhenRightToLeft="True"/>
                            </ContentControl.Tag>
                        </ContentControl>
                    </Button>


                    <!--FontSize-->
                    <TextBlock x:Name="FontSizeTextBlock" Grid.ColumnSpan="4" Grid.Row="6" Style="{StaticResource AppTextBlockStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <hsvColorpickers:NumberPicker x:Name="FontSizePicker" Minimum="4" Maximum="1000" ButtonStyle="{StaticResource AppRoundedButtonStyle}" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}"
                             Value="{x:Bind FontSizeConverter(SelectionViewModel.FontSize), Mode=OneWay}" />

                        <Button x:Name="FontSizeButton" Grid.Column="1" Style="{StaticResource AppRoundedButtonStyle}">
                            <Button.Flyout>
                                <Flyout Placement="Right" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
                                    <ListView x:Name="FontSizeListView" IsItemClickEnabled="True" SelectionMode="Single">
                                        <ListView.Resources>
                                            <!--StaticResource-->
                                            <SolidColorBrush x:Key="ListViewItemBackgroundSelected" Color="{ThemeResource SystemAccentColor}"/>
                                            <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPointerOver" Color="{ThemeResource SystemAccentColor}"/>
                                            <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPressed" Color="{ThemeResource SystemAccentColor}"/>
                                            <SolidColorBrush x:Key="ListViewItemForegroundSelected" Color="White"/>
                                            <SolidColorBrush x:Key="ListViewItemForegroundSelectedPointerOver" Color="White"/>
                                            <SolidColorBrush x:Key="ListViewItemForegroundSelectedPressed" Color="White"/>
                                        </ListView.Resources>
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="x:Int32">
                                                <TextBlock Text="{x:Bind}"/>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Flyout>
                            </Button.Flyout>
                            <FontIcon Margin="4,0" Glyph="&#xE09B;" FontSize="14" FontWeight="Bold" FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                          RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignRightWithPanel="True"
                          MirroredWhenRightToLeft="True"/>
                        </Button>

                    </Grid>


                </StackPanel>
            </ScrollViewer>
        </SplitView.Pane>

        <SplitView.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <ListView x:Name="FontFamilyListView" IsItemClickEnabled="True" SelectionMode="Single"
                          Visibility="Collapsed">
                    <ListView.Resources>
                        <!--StaticResource-->
                        <SolidColorBrush x:Key="ListViewItemBackgroundSelected" Color="{ThemeResource SystemAccentColor}"/>
                        <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPointerOver" Color="{ThemeResource SystemAccentColor}"/>
                        <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPressed" Color="{ThemeResource SystemAccentColor}"/>
                        <SolidColorBrush x:Key="ListViewItemForegroundSelected" Color="White"/>
                        <SolidColorBrush x:Key="ListViewItemForegroundSelectedPointerOver" Color="White"/>
                        <SolidColorBrush x:Key="ListViewItemForegroundSelectedPressed" Color="White"/>
                    </ListView.Resources>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <TextBlock FontFamily="{x:Bind}" Text="{x:Bind}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button x:Name="CloseButton" Grid.Row="2" Style="{StaticResource AppRoundedButtonStyle}"/>
            </Grid>
        </SplitView.Content>
    </SplitView>

</UserControl>
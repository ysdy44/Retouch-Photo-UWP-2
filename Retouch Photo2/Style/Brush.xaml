<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:apiContractPresent5="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract,5)">

    
    <!--Brush-->
    <SolidColorBrush x:Key="AppForeground" Color="{ThemeResource AppForegroundColor}"/>
    <SolidColorBrush x:Key="AppBackground" Color="{ThemeResource AppBackgroundColor}"/>
    <SolidColorBrush x:Key="AppBorderBrush" Color="{ThemeResource AppBorderBrushColor}"/>

    
    <SolidColorBrush x:Key="AppFill" Color="{ThemeResource AppFillColor}"/>
    <SolidColorBrush x:Key="AppStroke" Color="{ThemeResource AppStrokeColor}"/>
    <SolidColorBrush x:Key="AppText" Color="{ThemeResource AppTextColor}"/>

    
    <apiContractPresent5:AcrylicBrush x:Key="AppAcrylicElementBrush" BackgroundSource="Backdrop" 
         TintColor="{ThemeResource AppBackgroundColor}" TintOpacity="0.8" FallbackColor="{ThemeResource AppForegroundColor}" />
    <apiContractPresent5:AcrylicBrush x:Key="AppAcrylicWindowBrush" BackgroundSource="HostBackdrop" 
         TintColor="{ThemeResource AppBackgroundColor}" TintOpacity="0.7" FallbackColor="{ThemeResource AppForegroundColor}" />

    
</ResourceDictionary>
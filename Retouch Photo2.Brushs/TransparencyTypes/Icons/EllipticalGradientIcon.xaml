<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media">

    <ControlTemplate x:Key="EllipticalGradientIcon" TargetType="ContentControl">
        <Ellipse Width="24" Height="24" StrokeThickness="1" Stroke="{ThemeResource AppStroke}">
            <Ellipse.Fill>
                <media:RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5" RadiusX="0.5" RadiusY="0.3">
                    <GradientStop Color="White" Offset="0" />
                    <GradientStop Color="Gray" Offset="1.0" />
                </media:RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </ControlTemplate>

</ResourceDictionary>
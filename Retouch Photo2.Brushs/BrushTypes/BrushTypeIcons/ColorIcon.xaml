<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="ColorIcon" TargetType="ContentControl">
        <Ellipse Width="24" Height="24" StrokeThickness="1" Stroke="{ThemeResource AppStroke}">
            <Ellipse.Fill>
                <SolidColorBrush Color="#00A5FF"/>
            </Ellipse.Fill>
        </Ellipse>
    </ControlTemplate>

</ResourceDictionary>
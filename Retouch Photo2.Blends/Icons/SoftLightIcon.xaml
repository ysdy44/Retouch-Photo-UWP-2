<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="SoftLightIcon" TargetType="ContentControl">
        <Canvas Width="24" Height="20">

            <Polygon StrokeThickness="2" Stroke="{ThemeResource SystemControlBackgroundAltHighBrush}" Fill="White">
                <Polygon.Points>
                    0,10 10,0 12,2 14,0 24,10 14,20 12,18 10,20
                </Polygon.Points>
            </Polygon>

            <Polygon Fill="DeepSkyBlue">
                <Polygon.Points>
                    0,10 10,0 12,2 4,10 12,18 10,20
                </Polygon.Points>
            </Polygon>
            <Polygon Fill="RoyalBlue">
                <Polygon.Points>
                    4,10 12,2 20,10 12,18
                </Polygon.Points>
            </Polygon>
            <Polygon Fill="OrangeRed">
                <Polygon.Points>
                    20,10 12,2 14,0 24,10 14,20 12,18
                </Polygon.Points>
            </Polygon>

        </Canvas>
    </ControlTemplate>

</ResourceDictionary>
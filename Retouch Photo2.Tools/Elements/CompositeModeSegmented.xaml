                    <VisualState.Setters>
                        <Setter Target = "NewButton.IsEnabled" Value="False"/>
                    </VisualState.Setters>
                </VisualState>
                
                <!--Add-->
                <VisualState x:Name="Add">
                    <VisualState.Setters>
                        <Setter Target = "AddButton.IsEnabled" Value="False"/>

<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="VerticalIcon" TargetType="ContentControl">
        <Canvas Width="20" Height="20" >
            <Line X1="0" Y1="0" X2="0" Y2="18" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeThickness="2" Stroke="{ThemeResource SystemBaseHighColor}"/>
            <Line X1="6" Y1="0" X2="6" Y2="18" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeThickness="2" Stroke="{ThemeResource SystemBaseHighColor}"/>
            <Line X1="12" Y1="0" X2="12" Y2="18" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeThickness="2" Stroke="{ThemeResource SystemBaseHighColor}"/>
            <Line X1="18" Y1="0" X2="18" Y2="18" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeThickness="2" Stroke="{ThemeResource SystemBaseHighColor}"/>
        </Canvas>
    </ControlTemplate>

</ResourceDictionary>
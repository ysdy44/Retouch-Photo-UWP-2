                </ListView.Items>
            </ListView>
        </Flyout>
    </UserControl.Resources>


    <ListView x:Name="ListView" IsItemClickEnabled="True" SelectionMode="Single"
              ScrollViewer.VerticalScrollBarVisibility="Hidden">
        <ListView.Items>

            <tools:ToolTypeListViewItem x:Name="Cursor" Type="Cursor" Index="0">
                <tools:ToolTypeListViewItem.Resources>
                    <ResourceDictionary Source="ms-appx:///Retouch Photo2.Tools/Icons/CursorIcon.xaml"/>
                </tools:ToolTypeListViewItem.Resources>
                <ToolTipService.ToolTip>
                    <ToolTip Placement="Right" Content="{x:Bind Cursor.Title}" IsOpen="{x:Bind IsOpenCore, Mode=OneWay}" Style="{StaticResource AppToolTipStyle}"/>
                </ToolTipService.ToolTip>
                <ContentControl Template="{StaticResource CursorIcon}"/>
            </tools:ToolTypeListViewItem>

            <ListViewItem Style="{StaticResource AppSeparatorListViewItemStyle}"/>

            <tools:ToolTypeListViewItem x:Name="View" Type="View" Index="2">

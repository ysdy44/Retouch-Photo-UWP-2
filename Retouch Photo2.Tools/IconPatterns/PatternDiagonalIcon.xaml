<UserControl
    x:Class="Retouch_Photo2.Tools.Icons.PatternDiagonalIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="50"
    >

    <Border BorderThickness="1" BorderBrush="{ThemeResource SystemAltHighColor}" Background="{ThemeResource SystemAltHighColor}" >
        <Canvas Width="19" Height="19">
            <Line X1="0" Y1="0" X2="4" Y2="19" StrokeThickness="2" Stroke="DeepSkyBlue" />
            <Line X1="5" Y1="0" X2="9" Y2="19" StrokeThickness="2" Stroke="DeepSkyBlue" />
            <Line X1="10" Y1="0" X2="14" Y2="19" StrokeThickness="2" Stroke="DeepSkyBlue" />
            <Line X1="15" Y1="0" X2="19" Y2="19" StrokeThickness="2" Stroke="DeepSkyBlue" />
        </Canvas>
    </Border>

</UserControl>
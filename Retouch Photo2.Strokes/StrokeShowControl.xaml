<UserControl
    x:Class="Retouch_Photo2.Strokes.StrokeShowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="Auto"
    Height="{StaticResource AppRoundedHeight}" 
    Margin="{StaticResource AppMargin}" 
    d:DesignWidth="100"
    d:DesignHeight="50"
    >

    <Border x:Name="RootGrid" Width="80" CornerRadius="4" BorderThickness="1" BorderBrush="{ThemeResource AppForeground}" Background="{ThemeResource AppBackground}">
        <Line x:Name="Line" X1="8" Y1="17" X2="68" Y2="17" StrokeThickness="4" Stroke="{ThemeResource SystemBaseHighColor}" />
    </Border>

</UserControl>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Retouch_Photo2.Operates">

    <ControlTemplate x:Key="MoveFrontIcon" TargetType="local:OperateControl">
        <Viewbox Width="30" Height="30">

            <!--VisualState-->
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="VisualStateGroup">

                    <!--Normal-->
                    <VisualState x:Name="Normal"/>

                    <!--Disabled-->
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Target = "Grid.Opacity" Value="0.5"/>
                            <Setter Target = "YellowPolygon.Fill" Value="Gray"/>
                        </VisualState.Setters>
                    </VisualState>

                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

            <Grid x:Name="Grid" Width="40" Height="40" >

                <Polygon Fill="Gray">
                    <Polygon.Points>
                        35,5 35,17 31,17 31,9 23,9 23,5
                    </Polygon.Points>
                </Polygon>

                <Polygon x:Name="YellowPolygon" Fill="#E2A747">
                    <Polygon.Points>
                        10,10 30,10 30,30 10,30</Polygon.Points>
                </Polygon>

                <Polygon Fill="Gray">
                    <Polygon.Points>
                        9,31 17,31 17,35 5,35 5,23 9,23
                    </Polygon.Points>
                </Polygon>

            </Grid>

        </Viewbox>
    </ControlTemplate>

</ResourceDictionary>
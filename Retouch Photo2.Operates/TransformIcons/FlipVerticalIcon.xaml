<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="FlipVerticalIcon" TargetType="ContentControl">
        <Viewbox Width="30" Height="30">

            <!--VisualState-->
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="VisualStateGroup">

                    <!--Normal-->
                    <VisualState x:Name="Normal"/>

                    <!--Disabled-->
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Target = "Grid.Opacity" Value="0.5"/>
                            <Setter Target = "DodgerBluePolygon.Fill" Value="Gray"/>
                            <Setter Target = "GrayPolygon.Fill" Value="Gray"/>
                        </VisualState.Setters>
                    </VisualState>

                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

            <Grid x:Name="Grid" Width="40" Height="40" >

                <Polygon x:Name="DodgerBluePolygon" Fill="DodgerBlue">
                    <Polygon.Points>
                        6,4 19,18 32,4
                    </Polygon.Points>
                </Polygon>

                <Polygon x:Name="GrayPolygon" Fill="Gray">
                    <Polygon.Points>
                        6,36 19,22 32,36
                    </Polygon.Points>
                </Polygon>

            </Grid>

        </Viewbox>
    </ControlTemplate>

</ResourceDictionary>